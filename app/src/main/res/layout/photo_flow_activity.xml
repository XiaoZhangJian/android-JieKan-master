<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/act_flow_rl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/act_flow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/back" />

            <TextView
                android:id="@+id/act_flow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:text="{ 下载 }"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

        </RelativeLayout>


        <ooo.oxo.library.widget.PullBackLayout
            android:id="@+id/act_flow_pull_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.kims.jiekan.widget.RatioImageView
                android:id="@+id/act_flow_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_launcher"
                android:transitionName="@string/name" />

        </ooo.oxo.library.widget.PullBackLayout>


    </LinearLayout>


</layout>